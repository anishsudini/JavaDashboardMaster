<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dataorganizer.GraphController">
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="chartContainer" layoutX="40.0" layoutY="14.0" prefHeight="400.0" prefWidth="500.0">
               <children>
                  <LineChart fx:id="lineChart" animated="false" createSymbols="false" title="   ">
                    <xAxis>
                      <NumberAxis autoRanging="false" label="Time " side="BOTTOM" tickUnit="1.0" fx:id="xAxis" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis fx:id="yAxis" autoRanging="false" label="Accel/Gyro" minorTickVisible="false" side="LEFT" tickUnit="0.5" />
                    </yAxis>
                  </LineChart>
               </children>
            </Pane>
         </children>
      </Pane>
   </center>
   <right>
      <VBox fx:id="dataControls" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TitledPane fx:id="dataDisplayTitledPane" alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="200.0" text="Data Series Box">
               <content>
                  <FlowPane fx:id="dataDisplayCheckboxesFlowPane" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" />
               </content>
            </TitledPane>
            <TitledPane fx:id="rawOrSignedDataDisplayTitledPane" alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="200.0" text="Data Analysis Tools">
               <content>
                  <FlowPane fx:id="rawOrSignedDataDisplayFlowPane" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <CheckBox fx:id="displayRawDataCheckbox" mnemonicParsing="false" onAction="#handleDisplayRawData" text="Display Raw Data">
                           <padding>
                              <Insets bottom="5.0" />
                           </padding></CheckBox>
                        <CheckBox fx:id="displaySignedDataCheckbox" mnemonicParsing="false" onAction="#handleDisplaySignedData" selected="true" text="Display Signed Data" />
                     </children></FlowPane>
               </content></TitledPane>
            <HBox fx:id="zoomControls" alignment="CENTER" prefHeight="100.0" prefWidth="150.0" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="zoomButton" mnemonicParsing="false" onAction="#handleZoom" prefHeight="30.0" prefWidth="60.0" text="Zoom" />
                  <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleReset" prefHeight="30.0" prefWidth="60.0" text="Reset" />
               </children>
            </HBox>
         </children></VBox>
   </right>
